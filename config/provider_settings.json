{
  "_comment": "Bidirectional failover: GPT-4 and Claude are each other's failover. If one fails, the system automatically switches to the other.",
  "providers": {
    "openai": {
      "api_key_env": "OPENAI_API_KEY",
      "model": "gpt-4",
      "max_tokens": 500,
      "temperature": 0.7,
      "timeout_seconds": 5,
      "base_url": "https://api.openai.com/v1",
      "cost_per_1k_input_tokens": 0.03,
      "cost_per_1k_output_tokens": 0.06
    },
    "anthropic": {
      "api_key_env": "ANTHROPIC_API_KEY",
      "model": "claude-3-5-sonnet-20241022",
      "max_tokens": 500,
      "temperature": 0.7,
      "timeout_seconds": 5,
      "base_url": "https://api.anthropic.com",
      "cost_per_1k_input_tokens": 0.003,
      "cost_per_1k_output_tokens": 0.015
    }
  },
  "default_provider": "openai",
  "fallback_provider": "anthropic",
  "_note": "While default/fallback suggests direction, the actual implementation is bidirectional - either provider can failover to the other.",
  "circuit_breaker": {
    "failure_threshold": 5,
    "error_rate_threshold": 0.5,
    "recovery_timeout_seconds": 30
  }
}

